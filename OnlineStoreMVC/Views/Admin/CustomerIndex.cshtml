@model IEnumerable<OnlineStoreMVC.Models.Person>;

@{
    ViewData["Title"] = "Customer Index";
}

<div class="container">
    <div class="jumbotron">
        <h1>@ViewData["Title"]</h1>
    </div>
    <p class="text-success">@TempData["Message"]</p>
    <form asp-controller="Admin" asp-action="CustomerIndex" method="GET">
        Search by user id:<input type="text" name="id" />
        <input type="submit" value="Search" />
    </form>
    <table class="table">
        <thead>
            <tr> <!--Table headers-->
                <th>
                    @Html.DisplayNameFor(model => model.UserID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Firstname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lastname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Addr1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Addr2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>

            </tr>
        </thead>
        
        <tbody>
<!-- iterate through the model -->
            @foreach(var person in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => person.UserID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => person.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => person.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => person.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => person.Addr1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => person.Addr2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => person.Email)
                </td>
                <td>
                    <a asp-controller="Admin" asp-action="Edit" asp-route-id="@person.UserID">Edit</a>
                </td>
                <td>
                <a asp-controller="Admin" asp-action="EditPassword" asp-route-id="@person.UserID">Change Password</a></td>   

            </tr>

            }
        </tbody>
    
    </table>
</div> 